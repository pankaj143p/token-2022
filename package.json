    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@types/web": "^0.0.259",
    "dotenv": "^17.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  }
