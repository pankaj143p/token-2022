{
  "name": "token-2022-amm",
  "version": "1.0.0",
  "description": "Token-2022 AMM with Transfer Hook support",
  "main": "index.js",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "anchor build",
    "build-all": "chmod +x scripts/build-all.sh && ./scripts/build-all.sh",
    "test": "anchor test --skip-local-validator",
    "test-local": "anchor test",
    "deploy-program": "ts-node scripts/deploy-program.ts",
    "deploy": "anchor deploy --provider.cluster devnet && npm run deploy-program",
    "setup": "chmod +x scripts/setup.sh && ./scripts/setup.sh",
    "fix-audit": "npm audit fix --force",
    "clean": "anchor clean && rm -rf target/",
    "dev": "cd app && npm run dev",
    "update-solana": "sh -c \"$(curl -sSfL https://release.solana.com/v1.18.26/install)\"",
    "check-tools": "echo 'Solana:' && solana --version && echo 'Anchor:' && anchor --version"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.95.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.4",
    "mocha": "^11.7.1",
    "prettier": "^3.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "bigint-buffer": "1.1.5",
    "@solana/buffer-layout-utils": "0.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Token-2022 AMM Team",
  "license": "MIT"
}
