{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "anchor build",
    "test": "anchor test",
    "test:devnet": "cp Anchor.devnet.toml Anchor.toml && anchor test",
    "test:mainnet": "cp Anchor.mainnet.toml Anchor.toml && anchor test",
    "deploy": "anchor deploy",
    "deploy:devnet": "cp Anchor.devnet.toml Anchor.toml && anchor deploy",
    "deploy:mainnet": "cp Anchor.mainnet.toml Anchor.toml && anchor deploy",
    "start:frontend": "cd app && yarn start",
    "build:frontend": "cd app && yarn build",
    "setup": "yarn install && cd app && yarn install"
  },
